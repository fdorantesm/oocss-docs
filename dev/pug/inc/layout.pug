include ../inc/mixins

doctype
html
	head
		link(rel="stylesheet" href="https://rawgit.com/fdorantesm/oocss/master/dist/bootstrap.min.css")
		block css
		link(rel="stylesheet" href="https://fdorantesm.github.io/oocss-docs/assets/css/style.css")
		link(rel="stylesheet" href="https://fdorantesm.github.io/oocss-docs/assets/js/highlight/monokai-sublime.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(charset="UTF-8")
		meta(name="keyword" content="css framework,flexbox,bootstrap,stylesheet,stylus")
		meta(name="description" content="OOCSS is light powerful framework to make front-end easiest made with stylus")
		base(href="https://fdorantes.github.io/oocss-docs/")
		title OOCSS Framework | a light powerful framework
	body(ng-app="oocss")
		main(ng-controller="mainCtrl")
			block main
			.container
				.row
					.col-md-3.col-lg-3.hidden-sm-below
						aside
							ul.lsn.list-reset
								li: a(href="background") {{hi}}
								li: a(href="background") Background
								li: a(href="border") Border
								li: a(href="box-sizing") Box sizing
								li: a(href="color") Color
								li: a(href="cursor") Cursor
								li: a(href="display") Display
								li: a(href="float") Float
								li: a(href="flex") Flex
								li: a(href="font") Font
								li
									a(href="grid") Grid
									ul.lsn
										li: a(href="grid-flex") Flex
										li: a(href="grid-float") Float
										li: a(href="grid-fractions") Inline block
								li: a(href="height") Height
								li: a(href="list") List
								li: a(href="margin-and-padding") Margin & Padding
								li: a(href="opacity-and-visibility") Opacity & Visibility
								li: a(href="position") Position
								li: a(href="text") Text
								li: a(href="visible-and-hidden") Visible & Hidden
					.col-md-9.col-lg-9
						#main-content(ng-view)
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/highlight/highlight.pack.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/libs/angular/angular.min.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/modules/angular-route.min.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/modules/angular-css.min.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/jquery-3.3.1.min.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/scripts.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/app.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/config.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/directives.js")
		script(src="https://fdorantesm.github.io/oocss-docs/assets/js/controllers.js")